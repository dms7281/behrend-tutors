@model BehrendTutors.Models.TutorSession

@{
    ViewData["Title"] = "Tutor Home Page";
    int? TutorId = ViewBag.TutorId as int?;
    DateTime startTime = new DateTime(2024, 01, 14, 0, 0, 0);
    
}

<head>
    <!-- Other head elements... -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</head>


<h1>Hello @ViewBag.TutorName</h1>

<div class="container-fluid">
    <div class="row gx-5">
            <div class="col-xl-3">
                <div class="p-3 border bg-light">
                    <form asp-controller="TutorSessions" asp-action="Create">
                        <input type="hidden" asp-for="TutorIdSession" value="@TutorId" />
                        <div class="form-group">
                            <label asp-for="SessionType" class="control-label"></label>
                            <select asp-for="SessionType" asp-items="Html.GetEnumSelectList<TutorSessionType>()" class="form-control"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="SelectedClassId" class="control-label">Select Classes</label>
                            <select asp-for="SelectedClassId" asp-items="@(new SelectList(ViewBag.TutorClasses ?? new List<Class>(), "id", "ClassTitle"))" class="form-control" single></select>
                            <span asp-validation-for="SelectedClassId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SessionDateTime" class="control-label">Choose Date</label>
                            <input asp-for="SessionDateTime" type="text" class="form-control flatpickr" />
                            <span asp-validation-for="SessionDateTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        
        <div class="col-xl-9">
            <div class="p-3 border bg-light">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        //Flatpickr is the fancy calander that is used, config settings here
        flatpickr(".flatpickr", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            
        });
    </script>
}










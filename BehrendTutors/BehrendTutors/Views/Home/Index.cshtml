@model IEnumerable<BehrendTutors.Models.Class>

@{
    ViewData["Title"] = "Home Page";
    var month = DateTime.Now.Month;
    var year = DateTime.Now.Year;
    var multiValue = new DateTime[] { new DateTime(year, month, 10), new DateTime(year, month, 15), new DateTime(year, month, 25) };
}

<div class="container-fluid">
    <div class="row gx-5">
        <div class="col-xl-3">
            <div class="p-3 border bg-light">
                <ul class="list-group">
                    @foreach (var item in Model)
                    { //@Html.DisplayFor(modelItem => item.ClassTitle)
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-xl-10 justify-content-xl-start">
                                    @Html.DisplayFor(modelItem => item.Subject)-@Html.DisplayFor(modelItem => item.CourseNum)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl justify-content-xl-start">
                                    @Html.DisplayFor(modelItem => item.ClassNum)
                                </div>
                                <div class="col-xl justify-content-xl-end">
                                    @Html.DisplayFor(modelItem => item.ClassTitle)
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-xl-3">
            <div class="p-3 border bg-light">
                <div class="col-lg-7 control-section sb-property-border">
                <div class="calender-section">
                    <div id="calender-control" class="col-lg-6 col-sm-8 col-md-8 multiselectWrapper">
                        <ejs-calendar id="calendar" isMultiSelection="true" values="@multiValue" created="changeValue" change="changeValue"></ejs-calendar>
                    </div>
                </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="p-3 border bg-light">Weekly view</div>
        </div>
    </div>
</div>